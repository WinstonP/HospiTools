<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FamilyOptions">


    <TextView
        android:id="@+id/Family_Page_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an Option"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/Potential_wait_times_btn"/>


    <Button
        android:id="@+id/Potential_wait_times_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Potential Wait Times"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Family_Page_TV"
        app:layout_constraintBottom_toTopOf="@+id/general_procedure_info_btn"
        />

    <Button
        android:id="@+id/general_procedure_info_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Procedure Information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Potential_wait_times_btn"
        app:layout_constraintBottom_toTopOf="@+id/find_patient_btn"
        />


    <Button
        android:id="@+id/find_patient_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Patient Using MRN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/general_procedure_info_btn"
        app:layout_constraintBottom_toTopOf="@+id/leaving_instructions_btn"
        />

    <Button
        android:id="@+id/leaving_instructions_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions on Leaving"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_patient_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        />





</android.support.constraint.ConstraintLayout>